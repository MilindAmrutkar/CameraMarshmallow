<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onestechsolution.cameramarshmallow.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_CustomerPhoto_NewLoanActivity"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="takePicture"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_Item1_NewLoanActivity"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="takePicture"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_Item2_NewLoanActivity"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="takePicture"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_Item3_NewLoanActivity"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="takePicture"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_Item4_NewLoanActivity"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="takePicture"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_Item5_NewLoanActivity"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="takePicture"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button_image"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="sendValues"
            android:text="Send" />
    </LinearLayout>

</ScrollView>
